{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/relay/cmd/server",
      "cwd": "${workspaceFolder}/relay",
      "envFile": "${workspaceFolder}/relay/.env"
    },
    {
      "name": "Worker",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/relay/cmd/worker",
      "cwd": "${workspaceFolder}/relay",
      "envFile": "${workspaceFolder}/relay/.env"
    },
    {
      "name": "Codegraph CLI",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/codegraph/cmd/codegraph",
      "cwd": "${workspaceFolder}/codegraph",
      "args": []
    },
    {
      "name": "Dashboard",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/dashboard",
      "console": "integratedTerminal",
      "consoleName": "Dashboard"
    }
  ],
  "compounds": [
    {
      "name": "Relay Backend",
      "configurations": ["Server", "Worker"],
      "stopAll": true
    },
    {
      "name": "Relay Full Stack",
      "configurations": ["Server", "Worker", "Dashboard"],
      "stopAll": true
    }
  ]
}
