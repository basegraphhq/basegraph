# Environment
RELAY_ENV=development

# Server
PORT=8080
DASHBOARD_URL=http://localhost:3000

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/relay?sslmode=disable
DB_MAX_CONNS=10
DB_MIN_CONNS=2

# Redis & Pipeline
REDIS_URL=redis://localhost:6379/0
REDIS_STREAM=relay_events
REDIS_CONSUMER_GROUP=relay_group
REDIS_CONSUMER_NAME=relay_worker_1
REDIS_DLQ_STREAM=relay_events_dlq
TRACE_HEADER_NAME=X-Trace-Id

# WorkOS Authentication
WORKOS_API_KEY=dummy
WORKOS_CLIENT_ID=dummy
WORKOS_REDIRECT_URI=http://localhost:8080/auth/callback

# Webhook
WEBHOOK_BASE_URL=http://localhost:8080

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_SERVICE_NAME=relay
OTEL_SERVICE_VERSION=dev
