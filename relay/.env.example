# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/relay?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_STREAM=relay_events
REDIS_CONSUMER_GROUP=relay_group
REDIS_CONSUMER=relay_worker_1
REDIS_DLQ_STREAM=relay_events_dlq

# Server
PORT=8080
ENV=development
WEBHOOK_BASE_URL=http://localhost:8080

# WorkOS (optional for local development)
WORKOS_API_KEY=dummy
WORKOS_CLIENT_ID=dummy

# Dashboard
DASHBOARD_URL=http://localhost:3000

# OpenTelemetry (optional)
OTEL_SERVICE_NAME=relay
OTEL_ENDPOINT=

# Pipeline
PIPELINE_REDIS_URL=redis://localhost:6379/0
PIPELINE_REDIS_STREAM=relay_events
PIPELINE_REDIS_GROUP=relay_group
PIPELINE_REDIS_CONSUMER=relay_worker_1
PIPELINE_REDIS_DLQ_STREAM=relay_events_dlq

# LLM Configuration
LLM_ENABLED=true
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7